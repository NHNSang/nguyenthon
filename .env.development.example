# WordPress GraphQL endpoint
NEXT_PUBLIC_WORDPRESS_API_URL=https://your-wordpress-site.com/graphql
NEXT_PUBLIC_WORDPRESS_API_HOSTNAME=your-wordpress-site.com/graphql

# WordPress Authentication (JWT Token from WP GraphQL plugin)
WORDPRESS_AUTH_REFRESH_TOKEN=your_jwt_token_here

# WordPress Admin Credentials (for development only)
WP_USER=your_wp_admin_email@example.com
WP_PASSWORD=your_wp_password

# Gmail SMTP Configuration for notifications
GMAIL_USER=your_gmail@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Admin & User Email Addresses
ADMIN_EMAIL=admin@your-site.com
USER_EMAIL=user@your-site.com

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000